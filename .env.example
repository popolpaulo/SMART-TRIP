# Configuration de l'environnement de développement
# Copiez ce fichier en .env et adaptez les valeurs

# Serveur
NODE_ENV=development
PORT=3000
HOST=localhost

# Base de données PostgreSQL
DB_HOST=localhost
DB_PORT=5433
DB_NAME=smarttrip_dev
DB_USER=smarttrip_user
DB_PASSWORD=smarttrip_password

# Sécurité
JWT_SECRET=votre_secret_jwt_tres_complexe_a_changer
JWT_EXPIRE=7d

# API externes - Vols
AMADEUS_API_KEY=votre_cle_amadeus
AMADEUS_API_SECRET=votre_secret_amadeus
AMADEUS_BASE_URL=https://test.api.amadeus.com

SKYSCANNER_API_KEY=votre_cle_skyscanner
SKYSCANNER_BASE_URL=https://partners.api.skyscanner.net

# API Hôtels
HOTEL_API_KEY=votre_cle_hotel

# API Météo
OPENWEATHER_API_KEY=votre_cle_openweather

# VPN Service (géolocalisation multi-pays)
VPN_SERVICE_API_KEY=votre_cle_vpn
VPN_ENABLED=false

# IA et Machine Learning
OPENAI_API_KEY=votre_cle_openai
AI_MODEL=gpt-4
AI_PREDICTION_ENABLED=true

# Cache Redis (optionnel, pour performances)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS
CORS_ORIGIN=http://localhost:5173

# Logs
LOG_LEVEL=debug
